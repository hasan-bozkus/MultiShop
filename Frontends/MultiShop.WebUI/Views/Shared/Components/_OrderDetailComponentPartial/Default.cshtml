@model CreateOrderAddressDto

<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat ve Fatura Adresiniz</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="row">
            <div class="col-md-6 form-group">
                <label>Adınız</label>
                <input class="form-control" asp-for="Name" type="text" placeholder="Adınız">
            </div>
            <div class="col-md-6 form-group">
                <label>Soyadınız</label>
                <input class="form-control" asp-for="Surname" type="text" placeholder="Soyadınız">
            </div>
            <div class="col-md-6 form-group">
                <label>E-Posta Adresiniz</label>
                <input class="form-control" asp-for="Email" type="text" placeholder="ornek@email.com">
            </div>
            <div class="col-md-6 form-group">
                <label>Telefon Numaranız</label>
                <input class="form-control" asp-for="Phone" type="text" placeholder="+90 555 456 789">
            </div>
            <div class="col-md-6 form-group">
                <label>Adres Satır 1</label>
                <input class="form-control" asp-for="Detail1" type="text" placeholder="123 Mahellesi">
            </div>
            <div class="col-md-6 form-group">
                <label>Adres Satır 2</label>
                <input class="form-control" asp-for="Detail2" type="text" placeholder="123 Sokak">
            </div>
            <div class="col-md-6 form-group">
                <label>Ülke</label>
                <input class="form-control" asp-for="Country" type="text" placeholder="Türkiye">
            </div>
            <div class="col-md-6 form-group">
                <label>Şehir</label>
                <input class="form-control" asp-for="City" type="text" placeholder="Mardin">
            </div>
            <div class="col-md-6 form-group">
                <label>İlçe</label>
                <input class="form-control" asp-for="District" type="text" placeholder="Merkez">
            </div>
            <div class="col-md-6 form-group">
                <label>Posta Kodu</label>
                <input class="form-control" asp-for="ZipCode" type="text" placeholder="123">
            </div>

        </div>
    </div>

</div>
