@model CreateProductImageDto
@{
    ViewData["Title"] = "CreateProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Göreseli Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">

                        <input type="hidden" value="@ViewBag.productId" asp-for="ProductID" />

                        <label> Ürün Görseli</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-primary">Ürün Göreslini Ekle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
