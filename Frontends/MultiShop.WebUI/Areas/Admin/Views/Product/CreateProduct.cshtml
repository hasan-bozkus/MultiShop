@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">

                        <label> Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="ProductName" />
                        <br />

                        <label> Ürün Fiyatı</label>
                        <input type="text" class="form-control" asp-for="ProductPrice" />
                        <br />

                        <label> Ürün Görseli</label>
                        <input type="text" class="form-control" asp-for="ProductImageUrl" />
                        <br />

                        <label> Ürün Kategorisi</label>
                        <select class="form-control"  style="min-height:50px !important;" asp-items="@ViewBag.CategoryValues" asp-for="CategoryID">
                            <option value="">Seçiniz...</option>
                           
                        </select>
                        <br />

                        <label> Ürün Açıklaması</label>
                        <textarea rows="5" class="form-control" asp-for="ProductDescription"> </textarea>
                        <br />
                        <button class="btn btn-primary">Ürünü Ekle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

