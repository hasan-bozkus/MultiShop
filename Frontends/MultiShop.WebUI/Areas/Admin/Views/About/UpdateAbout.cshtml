@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Hakkımda Alanı Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">

                        <input type="hidden" asp-for="AboutID" />

                        <label> Açıklama</label>
                        <textarea class="form-control" rows="5" asp-for="Description"> </textarea>
                        <br />
                        <label> Adres</label>
                        <input type="text" class="form-control" asp-for="Address" />
                        <br />
                        <label> Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />
                        <label> Telefon Numarası</label>
                        <input type="text" class="form-control" asp-for="Phone" />
                        <br />
                        <button class="btn btn-primary">Hakkımda Bilgisini Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
